#!/bin/bash
#  _       _                               __ ____ ____  
# | |     | |                             /_ |___ \___ \ 
# | | ____| | __ ___      _____  ___  _ __ | | __) |__) |
# | |/ / _` |/ _` \ \ /\ / / __|/ _ \| '_ \| ||__ <|__ < 
# |   < (_| | (_| |\ V  V /\__ \ (_) | | | | |___) |__) |
# |_|\_\__,_|\__,_| \_/\_/ |___/\___/|_| |_|_|____/____/ 
#
# https://github.com/kdawson133 @kirk133
#
clear
echo 'Removing old Recycled files...'
find /oxygen/*/.recycle/ -type f -mtime 7 -delete
echo 'Removing any empty directories...'
find /oxygen/*/.recycle/ -type d -empty -delete
echo 'Done!'

 



